fun fib(n)
{
`Function fib(n)
-----------------------------------
parameter
---------
n : index of the Fibonacci number.

returns
-------
The nth Fibonacci number.`;
	var a=1,b=1,c;
	if(isNatural(n) and Number(n)>0)
	{
		for(var i=1;i<Number(n);i=i+1)
		{
			c=a+b;
			a=b;
			b=c;
		}
		return a;
	}
	else  return Error("Argument must be a positive integer");
}

fun modulo(a,b,c)
{
	var x=1;
	while(b>0)
	{
		if(b%2==1)
		{
			x=(x*a)%c;
		}
		a=(a*a)%c;
		b=b/2;
	}
	return x%c;
}
fun fermat(p)
{
