	}
	else  return Error("Argument must be a nonnegative integer");
}

fun ceil(x)
{
	if(!isNumber(x))  return Error("Argument x must be a number");
	else{if(x%1!=0) return ((x+1)\1).asInt();
	else return x.asInt();}
}

